{
  "name": "vscode-systemd",
  "displayName": "Systemd",
  "description": "Systemd language support",
  "version": "0.1.0",
  "publisher": "Neubau",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Languages"
  ],
  "private": true,
  "activationEvents": [
    "onLanguage:systemd"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [{
      "id": "systemd",
      "aliases": ["Systemd", "systemd"],
      "extensions": [
        ".service",
        ".path",
        ".target",
        ".automount",
        ".device",
        ".mount",
        ".scope",
        ".slice",
        ".snapshot",
        ".socket",
        ".swap",
        ".timer"
      ],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "systemd",
      "scopeName": "source.systemd",
      "path": "./syntaxes/systemd.tmLanguage"
    }],
    "snippets": [{
      "language": "systemd",
      "path": "./snippets/systemd.json"
    }]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/fuzzaldrin-plus": "0.0.1",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "@types/immutable": "^3.8.1",
    "mocha": "^2.3.3",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "option.ts": "^0.1.6"
  },
  "dependencies": {
    "fuzzaldrin-plus": "^0.3.1",
    "immutable": "^3.8.1"
  }
}